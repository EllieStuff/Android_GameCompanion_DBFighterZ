<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
    
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pedro"
            />

        <TextView
            android:id="@+id/rankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rank: Terricola"
            />
        <TextView
            android:id="@+id/favCharTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fav. Char: Koku"
            />
        <TextView
            android:id="@+id/victoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="You Win"
            />
        <TextView
            android:id="@+id/victoryRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Victory Rate: 22%"
            />
        <TextView
            android:id="@+id/rankingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ranking: 0"
            />
        <TextView
            android:id="@+id/playTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Play Time: 333h"
            />
        <TextView
            android:id="@+id/maxComboTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Max. Combo: 99"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>