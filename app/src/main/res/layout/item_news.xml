<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="120dp"
    android:backgroundTint="@color/colorOrange"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">
    
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pedro"
            android:textSize="20dp"
            android:layout_marginLeft="35dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/rankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rank: Terricola" />

        <TextView
            android:id="@+id/victoryRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Victory Rate: 22%"
            />

        <TextView
            android:id="@+id/favCharTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fav. Char: Koku"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="160dp"
        android:orientation="vertical"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/rankingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:text="Ranking: 0" />

        <TextView
            android:id="@+id/playTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:text="Play Time: 333h" />

        <TextView
            android:id="@+id/maxComboTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            tools:text="Max. Combo: 99" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/e1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/drak"
        />
    <ImageView
        android:id="@+id/e2"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/e3"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/f1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/f2"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/f3"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/victoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="75dp"
            tools:text="You Win"
            android:textSize="20dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>