<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="120dp"
    android:backgroundTint="@color/colorOrange"
    >

    <LinearLayout
        android:id="@+id/clickableListOfNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        android:background="@drawable/ripple_effect"
        android:clickable="true">
    
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pedro"
            android:textSize="27dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp">

    <ImageView
        android:id="@+id/e1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a16"
        />
    <ImageView
        android:id="@+id/e2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a17"/>
    <ImageView
        android:id="@+id/e3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a18"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginLeft= "200dp"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/f1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/kidgoku"/>
        <ImageView
            android:id="@+id/f2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/goku"/>
        <ImageView
            android:id="@+id/f3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gokublue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/victoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="75dp"
            tools:text="You Win"
            android:textSize="27dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/rankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            tools:text="Rank: Terricola" />

        <TextView
            android:id="@+id/victoryRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            tools:text="Victory Rate: 22%"
            />

        <TextView
            android:id="@+id/favCharTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            tools:text="Fav. Char: Koku"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="210dp"
        android:orientation="vertical"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/rankingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="right"
            tools:text="Ranking: 0" />

        <TextView
            android:id="@+id/playTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="right"
            tools:text="Play Time: 333h" />

        <TextView
            android:id="@+id/maxComboTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="left"
            tools:text="Max. Combo: 99" />

    </LinearLayout>

</androidx.cardview.widget.CardView>